@page
@model IT_Center_Website.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<head>
    <link rel="stylesheet" href="~/css/output.css" />
    <link rel="stylesheet" href="~/css/input.css" />
</head>

<a asp-page="./Index">Back to Courses</a>
<h1>Course Detail</h1>

<div class="mt-[150px] mb-[150px]">
    <div>
        <div class="rounded-[30px] mb-[80px]">
            <img class="rounded-[30px]" src="@Html.DisplayFor(model => model.Course.ImageUrl)" />
        </div>
        <h2 class="text-[40px] text-[#FD7575] text-[leading-[30px] mb-[10px]">
             @Html.DisplayFor(model => model.Course.CourseName)
        </h2>
        
    </div>
    <div>
        <h1 class="price">
            @Html.DisplayFor(model => model.Course.Price)
        </h1>
        
    </div>
</div>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.ImageUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.IsAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.IsAvailable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course?.CourseId">Edit</a> |
    
</div>
