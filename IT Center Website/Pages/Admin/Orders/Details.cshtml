@page
@model IT_Center_Website.Pages.Admin.Orders.DetailsModel
@{
	Layout = "~/Pages/Admin/_AdminLayout.cshtml";
}
<body>
	<h1>Order Details</h1>
	<form class="grid grid-cols-2">
		<!--Basic Order Information-->
		<div>
			<div>
				<label asp-for="Order.OrderId"></label>
				<input asp-for="Order.OrderId" disabled />
			</div>
			<div>
				<label asp-for="Order.CreatedDate"></label>
				<input asp-for="Order.CreatedDate" disabled />
			</div>
			<div>
				<label asp-for="Order.Status"></label>
				<input asp-for="Order.Status" disabled />
			</div>
			<div>
				<label asp-for="@Model.TotalPrice"></label>
				<input asp-for="@Model.TotalPrice" disabled />
			</div>
			<div>
				<label asp-for="Order.AccountId"></label>
				<input asp-for="Order.AccountId" disabled />
			</div>
		</div>
		<!--Courses List in the Order-->
		<div>
			<h2>Ordered Courses</h2>
			<table>
				<thead>
					<tr>
						<th>Course ID</th>
						<th>Course Name</th>
						<th>Course Price</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var course in Model.Courses)
					{
						<tr>
							<td>@course.CourseId</td>
							<td>@course.CourseName</td>
							<td>@course.Price</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</form>
	<button>Go Back</button>
</body>
