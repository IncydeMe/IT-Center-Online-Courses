@page
@model IT_Center_Website.Pages.SignupModel
@{
	ViewData["Title"] = "Signup";
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" type="text/css" href="/css/Login/Login.css">
	<script src="https://kit.fontawesome.com/a81368914c.js"></script>
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<link rel="stylesheet" href="~/css/Login/Login.css" />
<link rel="stylesheet" href="https://cdnjs.cloudfare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

<body>
	<img class="wave" src="/images/login/wave.svg">
	<div class="container">
		<div class="login-content">
			<div class="container" id="container">
				<div class="form-container">
					<form method="post">
						<div class="head">
							<h2 class="title">Hello there!</h2>
							<p>Please signup to continue</p>
						</div>
						<div class="input-div one">
							<div class="i">
								<i class="fas fa-user"></i>
							</div>
							<div class="div">
								<h5>Email Address</h5>
								<input type="email" class="input" asp-for="SignupRequest.Email">
								<span asp-validation-for="SignupRequest.Email" class="text-danger"></span>
							</div>
						</div>
						<div class="input-div pass">
							<div class="i">
								<i class="fas fa-lock"></i>
							</div>
							<div class="div">
								<h5>Password</h5>
								<input type="password" class="input" asp-for="SignupRequest.Password">
								<span asp-validation-for="SignupRequest.Password" class="text-danger"></span>
							</div>
						</div>
						<input type="submit" class="btn" value="Sign up">
						<span class="signup">
							Already have an account?
							<a href="/Login">Login Here!</a>
						</span>
					</form>
				</div>
			</div>
		</div>
	</div>
	<div class="bubble-container">
		<div class="bubble b-1">
			<img src="/images/login/bubble-images/bubble-1.png" />
		</div>
		<div class="bubble b-2">
			<img src="/images/login/bubble-images/bubble-2.png" />
		</div>
		<div class="bubble b-3">
			<img src="/images/login/bubble-images/bubble-3.png" />
		</div>
		<div class="bubble b-4">
			<img src="/images/login/bubble-images/bubble-4.png" />
		</div>
		<div class="bubble b-5">
			<img src="/images/login/bubble-images/bubble-5.png" />
		</div>
		<div class="bubble b-6">
			<img src="/images/login/bubble-images/bubble-1.png" />
		</div>
		<div class="bubble b-7">
			<img src="/images/login/bubble-images/bubble-2.png" />
		</div>
		<div class="bubble b-8">
			<img src="/images/login/bubble-images/bubble-3.png" />
		</div>
		<div class="bubble b-9">
			<img src="/images/login/bubble-images/bubble-4.png" />
		</div>
		<div class="bubble b-10">
			<img src="/images/login/bubble-images/bubble-5.png" />
		</div>
	</div>
	<script type="text/javascript" src="/js/Login/Login.js"></script>
</body>
</html>